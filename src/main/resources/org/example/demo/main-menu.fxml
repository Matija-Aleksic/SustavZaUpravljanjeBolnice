<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.MainMenuController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Hospital Management System">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Label text="Main Menu">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>

    <Button text="Search Hospitals" onAction="#onSearchHospitals" prefWidth="250.0" styleClass="menu-button"/>
    <Button text="Search Doctors" onAction="#onSearchDoctors" prefWidth="250.0" styleClass="menu-button"/>
    <Button text="Search Patients" onAction="#onSearchPatients" prefWidth="250.0" styleClass="menu-button"/>
    <Button text="Search Appointments" onAction="#onSearchAppointments" prefWidth="250.0" styleClass="menu-button"/>

    <Label text="Data Management" style="-fx-padding: 10 0 0 0;">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>

    <Button text="Create Backup" onAction="#onCreateBackup" prefWidth="250.0" styleClass="menu-button"/>
    <Button text="Restore Backup" onAction="#onRestoreBackup" prefWidth="250.0" styleClass="menu-button"/>
    <Button text="View Activity Logs" onAction="#onViewLogs" prefWidth="250.0" styleClass="menu-button"/>

    <Button text="Exit" onAction="#onExit" prefWidth="250.0" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-padding: 10;"/>
</VBox>


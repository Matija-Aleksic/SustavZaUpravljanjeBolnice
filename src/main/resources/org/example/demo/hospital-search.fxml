<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demo.HospitalSearchController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label text="Search Hospitals">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>

            <GridPane hgap="10.0" vgap="10.0">
                <Label text="Hospital Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" promptText="Enter hospital name" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0"/>

                <Label text="Hospital ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="idField" promptText="Enter hospital ID" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0"/>
            </GridPane>

            <HBox spacing="10.0">
                <Button text="Search" onAction="#onSearch" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-padding: 8;"/>
                <Button text="Clear" onAction="#onClear" style="-fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-padding: 8;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="hospitalTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100.0"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="300.0"/>
            </columns>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>

